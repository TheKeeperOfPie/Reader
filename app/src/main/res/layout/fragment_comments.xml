<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.winsonchiu.reader.comments.FragmentComments"
    android:background="@android:color/transparent"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <View
                android:id="@+id/view_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/windowBackground"
                android:layout_below="@+id/toolbar"
                />

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                />

            <com.winsonchiu.reader.views.CustomSwipeRefreshLayout
                android:id="@+id/swipe_refresh_comment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/youtube"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:scrollbarFadeDuration="200"
                    android:paddingBottom="48dp"
                    android:clipToPadding="false"
                    />

            </com.winsonchiu.reader.views.CustomSwipeRefreshLayout>

        </RelativeLayout>

        <android.support.design.widget.AppBarLayout
            android:id="@+id/layout_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:layout_scrollFlags="scroll|enterAlways"
                />

        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_expand_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_unfold_more_white_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:layout_anchor="@id/swipe_refresh_comment_list"
            app:layout_anchorGravity="bottom|end"
            app:elevation="4dp"
            app:borderWidth="0dp"
            android:visibility="gone"
            />

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_actions"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_jump_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_vertical_align_top_white_24dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:contentDescription="@string/content_description_button_jump_top"
            app:fabSize="mini"
            app:elevation="4dp"
            app:borderWidth="0dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_comment_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:contentDescription="@string/content_description_button_comment_previous"
            app:fabSize="mini"
            app:elevation="4dp"
            app:borderWidth="0dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_comment_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:contentDescription="@string/content_description_button_comment_next"
            app:fabSize="mini"
            app:elevation="4dp"
            app:borderWidth="0dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_container_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:padding="8dp"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</RelativeLayout>
