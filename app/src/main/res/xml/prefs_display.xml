<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <PreferenceCategory
        android:key="prefs_category_display"
        android:title="@string/prefs_category_display"
        >

        <CheckBoxPreference
            android:key="pref_full_timestamps"
            android:title="@string/pref_full_timestamps"
            android:summary="@string/pref_full_timestamps_summary"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="pref_show_thumbnails"
            android:title="@string/pref_show_thumbnails"
            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:key="pref_nsfw_thumbnails"
            android:title="@string/pref_nsfw_thumbnails"
            android:defaultValue="true"
            />

        <ListPreference
            android:key="pref_grid_thumbnail_size"
            android:title="@string/pref_grid_thumbnail_size"
            android:entries="@array/pref_grid_thumbnail_size_entries"
            android:entryValues="@array/pref_grid_thumbnail_size_values"
            android:defaultValue="0.75"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            />

        <EditTextPreference
            android:key="pref_grid_columns"
            android:title="@string/pref_grid_columns"
            android:summary="@string/pref_grid_columns_summary"
            android:defaultValue="0"
            android:hint="@string/pref_grid_columns_hint"
            android:inputType="number"
            android:numeric="integer"
            />

        <ListPreference
            android:key="pref_theme_background"
            android:title="@string/pref_theme_background"
            android:entries="@array/pref_theme_background_entries"
            android:entryValues="@array/pref_theme_background_values"
            android:defaultValue="Dark"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

        <ListPreference
            android:key="pref_theme_primary"
            android:title="@string/pref_theme_primary"
            android:entries="@array/pref_theme_primary_entries"
            android:entryValues="@array/pref_theme_primary_values"
            android:defaultValue="Deep Purple"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

        <ListPreference
            android:key="pref_theme_accent"
            android:title="@string/pref_theme_accent"
            android:entries="@array/pref_theme_accent_entries"
            android:entryValues="@array/pref_theme_accent_values"
            android:defaultValue="Yellow"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

        <EditTextPreference
            android:key="pref_header_subreddit"
            android:title="@string/pref_header_subreddit"
            android:summary="@string/pref_header_subreddit_summary"
            android:defaultValue="earthporn"
            android:hint="@string/subreddit"
            android:inputType="text"
            />

    </PreferenceCategory>

</PreferenceScreen>