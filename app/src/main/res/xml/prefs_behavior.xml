<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="prefs_category_behavior"
        android:title="@string/prefs_category_behavior"
        >

        <CheckBoxPreference
            android:key="pref_save_history"
            android:title="@string/pref_save_history"
            android:summary="@string/pref_save_history_summary"
            android:defaultValue="true"
            />

        <EditTextPreference
            android:key="pref_history_size"
            android:title="@string/pref_history_size"
            android:summary="@string/pref_history_size_summary"
            android:defaultValue="5000"
            android:numeric="integer"
            android:inputType="number"
            />

        <CheckBoxPreference
            android:key="pref_dim_posts"
            android:title="@string/pref_dim_posts"
            android:summary="@string/pref_dim_posts_summary"
            android:defaultValue="true"
            />

        <Preference
            android:key="pref_clear_history"
            android:title="@string/pref_clear_history"
            />

        <CheckBoxPreference
            android:key="pref_external_browser"
            android:title="@string/pref_external_browser"
            android:summary="@string/pref_external_browser_summary"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="pref_swipe_exit_comments"
            android:title="@string/pref_swipe_exit_comments"
            android:summary="@string/pref_swipe_exit_comments_summary"
            android:defaultValue="true"
            />

        <EditTextPreference
            android:key="pref_home_subreddit"
            android:title="@string/pref_home_subreddit"
            android:summary="@string/pref_home_subreddit_summary"
            android:hint="@string/pref_home_subreddit_hint"
            android:defaultValue=""
            android:inputType="text"
            />

    </PreferenceCategory>

</PreferenceScreen>