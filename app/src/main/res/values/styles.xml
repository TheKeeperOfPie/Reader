<resources>

    <style name="AppDefaultTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darkThemeBackground</item>
        <item name="colorPrimaryDark">@color/darkThemeBackground</item>
        <item name="colorAccent">@color/darkThemeBackground</item>
        <item name="android:windowBackground">@color/darkThemeBackground</item>
    </style>

    <style name="AppDarkTheme" parent="@style/Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorGold">@color/darkThemeGold</item>

        <item name="android:textColor">@color/darkThemeTextColor</item>
        <item name="android:textColorSecondary">@color/darkThemeTextColorMuted</item>
        <item name="android:shadowColor">@color/darkThemeShadowColor</item>
        <item name="android:windowBackground">@color/darkThemeBackground</item>
        <item name="colorRowBackground">@color/darkThemeRowBackground</item>
        <item name="colorRowOverlay">@color/darkThemeRowOverlay</item>
        <item name="colorCellBackground">@color/darkThemeCellBackground</item>
        <item name="colorCellOverlay">@color/darkThemeCellOverlay</item>
        <item name="colorIconFilter">@color/darkThemeIconFilter</item>
        <item name="colorAlert">@color/textColorAlert</item>

        <item name="android:actionOverflowButtonStyle">@style/OverflowStyleDark</item>
    </style>

    <style name="AppLightTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorGold">@color/lightThemeGold</item>

        <item name="android:textColor">@color/lightThemeTextColor</item>
        <item name="android:textColorSecondary">@color/lightThemeTextColorMuted</item>
        <item name="android:shadowColor">@color/lightThemeShadowColor</item>
        <item name="android:windowBackground">@color/lightThemeBackground</item>
        <item name="colorRowBackground">@color/lightThemeRowBackground</item>
        <item name="colorRowOverlay">@color/lightThemeRowOverlay</item>
        <item name="colorCellBackground">@color/lightThemeCellBackground</item>
        <item name="colorCellOverlay">@color/lightThemeCellOverlay</item>
        <item name="colorIconFilter">@color/lightThemeIconFilter</item>
        <item name="colorAlert">@color/textColorAlertMuted</item>

        <item name="android:actionOverflowButtonStyle">@style/OverflowStyleLight</item>

    </style>

    <style name="AppBlackTheme" parent="AppDarkTheme">
        <item name="android:windowBackground">@color/blackThemeBackground</item>
        <item name="colorRowBackground">@color/blackThemeBackground</item>
        <item name="colorRowOverlay">@color/blackThemeOverlay</item>
        <item name="colorCellBackground">@color/blackThemeBackground</item>
        <item name="colorCellOverlay">@color/blackThemeOverlay</item>
    </style>

    <style name="OverflowStyleDark" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:contentDescription">toolbar_overflow_access</item>
    </style>

    <style name="OverflowStyleLight" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:contentDescription">toolbar_overflow_access</item>
    </style>

</resources>
